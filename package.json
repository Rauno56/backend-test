{
  "name": "backend-test",
  "version": "1.0.0",
  "description": "Back-end skill test",
  "main": "index.js",
  "scripts": {
    "run_test": "./node_modules/.bin/mocha --require babel-core/register",
    "test": "set DATA_SOURCE=inmemory&&npm run run_test",
    "clean": "rm -rf build",
    "build": "./node_modules/.bin/babel src -d build",
    "babel-node": "./node_modules/.bin/babel-node src/server.js",
    "dev": "set PORT=3000&&set DATA_SOURCE=postgresql&&set PSQL_DSN=postgres://postgres:123@localhost:5432/backend_test&&npm run babel-node",
    "start": "set PORT=3001&&node build/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leocavalcante/backend-test.git"
  },
  "keywords": [
    "backend",
    "test"
  ],
  "author": "leocavalcante <lc@leocavalcante.com>",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/leocavalcante/backend-test/issues"
  },
  "homepage": "https://github.com/leocavalcante/backend-test#readme",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-plugin-transform-async-to-generator": "^6.5.0",
    "babel-preset-es2015": "^6.5.0",
    "mocha": "^2.4.5"
  },
  "dependencies": {
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "pg-promise": "^3.2.3"
  }
}
